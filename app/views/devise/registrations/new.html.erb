<div class="row">
  <div class="col-md-4 col-md-offset-4">

    <h2 class="center">Sign up</h2>
    <br/>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render 'shared/devisemes' %>

      <div class="panel panel-default">
        <div class="panel-body">
            <h3><i class="far fa-lightbulb text-babu"></i> Types de réservation</h3>

             Etes-vous un individuelle résident ou externe ? Etes-vous une association ?
              <br/><br/>

              <div class="form-group">
                <%= f.check_box :local %> Réservation Résident
                <br/>
                <%= f.check_box :associat %> Réservation Association
                <br/>
                <%= f.check_box :particulier %> Réservation Externe
              </div>

        </div>
      </div>

      <hr/>

      <div class="form-group">
        <%= f.text_field :fullname, autofocus: true, placeholder: "Nom / Structure", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.text_field :surname, autofocus: true, placeholder: "Prénom", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control", autocomplete: "email" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", placeholder: "Mot de passe", class: "form-control" %>
      </div>


      <div class="actions">
        <%= f.submit "S'enregistrer'", class:"btn btn-normal btn-block" %>
      </div>
    <% end %>

    <hr/>
    <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path, class:"btn btn-facebook btn-block" %>


  </div>
</div>
