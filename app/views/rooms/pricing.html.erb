<div class="row">
  <div class="col-md-3">
    <%= render 'room_menu' %>
  </div>
  <div class="col-md-9">
    <div class="title-navbar text-center">Définissez vos prix</div>
    <div class="panel panel-default">

      <div class="panel-body">
        <div class="container">
          <%= form_for @room do |f| %>

          <div class="row">
            <div class="form-group">
              <label>PRIX RESIDENT / LOCAUX</label>
              <%= f.text_field :price, placeholder: "eg: 100€", class: "form-control", required: true %>
            </div>
          </div>

          <div class="text-center">
            <%= f.submit "Enregistrer", class: "btn btn-form" %>
          </div>

          <% end %>
        </div>
      </div>

      <hr/>

      <div class="panel-body">
        <div class="container">
          <%= form_for @room do |f| %>

          <div class="row">
            <div class="form-group">
              <label>PRIX PERSONNE EXTERNE</label>
              <%= f.text_field :pricelocal, placeholder: "eg: 100€", class: "form-control", required: true %>
            </div>
          </div>

          <div class="text-center">
            <%= f.submit "Enregistrer", class: "btn btn-form" %>
          </div>

          <% end %>
        </div>
      </div>

      <hr/>

      <div class="panel-body">
        <div class="container">
          <%= form_for @room do |f| %>

          <div class="row">
            <div class="form-group">
              <label>PRIX ASSOCIATION</label>
              <%= f.text_field :priceasso, placeholder: "eg: 100€", class: "form-control", required: true %>
            </div>
          </div>

          <div class="text-center">
            <%= f.submit "Enregistrer", class: "btn btn-form" %>
          </div>

          <% end %>
        </div>
      </div>


    </div>
  </div>


</div>
