<div class="row">
  <div class="col-md-3">
    <%= render 'room_menu' %>
  </div>
  <div class="col-md-9">
    <div class="title-navbar text-center">Description de votre salle</div>
    <div class="panel panel-default">


      <div class="panel-body">
        <div class="container">
          <%= form_for @room do |f| %>

          <div class="row">
            <div class="form-group">
              <label>Nom de votre salle</label>
              <%= f.text_field :listing_name, placeholder: "Nom de votre salle", class: "form-control", required: true %>
            </div>
          </div>

          <div class="row">
            <div class="form-group">
              <label>Description</label>
              <%= f.text_area :summary, rows:5, placeholder: "Description de votre salle?", class: "form-control", required: true %>
            </div>
          </div>

          <div class="text-center">
            <%= f.submit "Enregistrer", class: "btn btn-form" %>
          </div>

          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>
