<% rooms.each do |room| %>
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading preview">
        <%= image_tag room.cover_photo(:medium) %>
      </div>
      <div class="panel-body">
        <%= link_to room.listing_name, room %><br/>
        <%= room.price %>â‚¬ - <%= room.room_type %> - <%= pluralize(room.volume, "personne") %>
        <div id="star_<%= room.id %>"></div> <%= pluralize(room.average_rating, "avis") %>
      </div>
    </div>
  </div>

  <script>
    $('#star_<%= room.id %>').raty({
      path: '/assets',
      readOnly: true,
      score: <%= room.average_rating %>
    });
  </script>
<% end %>
